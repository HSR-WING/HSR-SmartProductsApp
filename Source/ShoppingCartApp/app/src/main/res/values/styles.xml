<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BackgroundImage" >
        <item name="android:layout_marginVertical">80dp</item>
        <item name="android:layout_marginHorizontal">40dp</item>
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="TotalAmountTextStyle">
        <item name="android:textSize">24dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="InfoTextStyle">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="CartItemLabelStyle">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="CartItemDetailStyle">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="CartItemValueStyle">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>
